<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitnessApp.Views.ProgramExercisesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FitnessApp.ViewModels"
    Title="{Binding Title}"
    Shell.NavBarIsVisible="True">

    <ContentPage.BindingContext>
        <viewmodels:ProgramExerciseViewModel />
    </ContentPage.BindingContext>

    <CollectionView
        BackgroundColor="Transparent"
        ItemsSource="{Binding ExercisesToDo}"
        SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="{Binding Exercise.Name}" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        FontAttributes="Italic"
                        VerticalOptions="End">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding Countdown}" />
                                <Span Text=" seconds" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.Footer>
            <Grid Padding="0,0" RowDefinitions="*, *">
                <Button
                    Grid.Row="1"
                    BackgroundColor="Red"
                    Command="{Binding StartWorkoutCommand}"
                    FontSize="Medium"
                    Text="Sart Workout" />
            </Grid>
        </CollectionView.Footer>
    </CollectionView>
</ContentPage>