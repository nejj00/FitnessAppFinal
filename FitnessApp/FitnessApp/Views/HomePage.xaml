<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitnessApp.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:helpers="clr-namespace:FitnessApp.Helpers"
    xmlns:images="clr-namespace:FitnessApp"
    xmlns:local="clr-namespace:FitnessApp.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="{StaticResource Background}"
    mc:Ignorable="d">

    <ContentPage.BindingContext>
        <local:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid
        Margin="20,20"
        ColumnDefinitions="*, *, *"
        RowDefinitions="2*, *, *">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="90,80"
            FontSize="Large"
            Text="Ab Trainer 3000" />
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Scale="1"
            Source="BruceDragonFlag" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,20"
            BackgroundColor="{StaticResource TabIconUnselected}"
            Command="{Binding GoToProgramPageCommand}"
            CornerRadius="40"
            FontFamily="FASolid"
            FontSize="40"
            Text="{x:Static helpers:FAIcons.Trophy}"
            TextColor="Azure" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20"
            BackgroundColor="{StaticResource TabIconUnselected}"
            Command="{Binding GoToMorePageCommand}"
            CornerRadius="40"
            FontFamily="FASolid"
            FontSize="40"
            Text="{x:Static helpers:FAIcons.GripLines}"
            TextColor="Azure" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,20"
            BackgroundColor="{StaticResource TabIconUnselected}"
            Command="{Binding GoToShufflePageCommand}"
            CornerRadius="40"
            FontFamily="FASolid"
            FontSize="40"
            Text="{x:Static helpers:FAIcons.CirclePlay}"
            TextColor="Azure" />

    </Grid>

